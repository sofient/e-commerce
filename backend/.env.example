# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database (when running outside Docker, use localhost)
MONGO_URI=mongodb://strangerthings:CHANGE_ME@localhost:27017/strangerthings_ecommerce?authSource=admin

# Docker Compose database credentials (required)
MONGO_ROOT_USER=strangerthings
MONGO_ROOT_PASSWORD=CHANGE_ME

# Redis
REDIS_PASSWORD=CHANGE_ME

# JWT Secrets (MUST CHANGE IN PRODUCTION — generate with: openssl rand -hex 32)
ACCESS_TOKEN_SECRET=
REFRESH_TOKEN_SECRET=
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Snipcart API
SNIPCART_API_KEY=
SNIPCART_SECRET_KEY=

# Security
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Credentials (Initial setup — MUST change before first deploy)
ADMIN_EMAIL=admin@cercle-eboutique.com
ADMIN_PASSWORD=

# Mongo Express (development only, docker compose --profile dev)
ME_BASICAUTH_USER=
ME_BASICAUTH_PASSWORD=

# Donation Association
DONATION_PERCENTAGE=15
ASSOCIATION_NAME=Association Partenaire
